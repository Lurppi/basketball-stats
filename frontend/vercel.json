{
    "root": "frontend",  // Falls dein Frontend-Projekt in einem Unterordner wie "frontend" liegt
    "rewrites": [
      { "source": "/(.*)", "destination": "/" }
    ],
    "build": {
      "env": {
        "NODE_ENV": "production"
      }
    },
    "outputDirectory": "dist",  // Stelle sicher, dass das Output-Verzeichnis korrekt ist, z.B. "dist" bei Vite
    "framework": "vite", // Spezifiziere das Framework, wenn du Vite verwendest
    "installCommand": "yarn install", // Installiert die Abhängigkeiten
    "buildCommand": "yarn build", // Führt den Build-Befehl aus
    "cleanUrls": true // Entfernt .html aus URLs
  }
  